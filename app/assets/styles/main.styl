.browserupgrade {
	margin: 0.2em 0;
	background: #ccc;
	color: #000;
	padding: 0.2em 0;
}

body
	padding 0
	font-family font_regular

.b-page__line
	padding 0
	background #fff
	
	&--main
		background url(../images/main-bg.png) no-repeat top center

.b-header
	width 1227px
	margin 0 auto
	padding-top 30px
	padding-bottom 45px
	display flex
	justify-content space-between
	align-items center
	
	@media (max-width: 1227px)
		width 100%
		padding-left  25px
		padding-right  25px
		flex-wrap wrap
		justify-content space-around

	&__phone
		font-size 36px
		font-family font_calibli

.b-menu
	display flex
	justify-content space-between
	width 1227px
	margin 0 auto
	padding-bottom 25px
	
	@media (max-width: 1227px)
		width 100%
		padding-left  25px
		padding-right  25px
		flex-wrap wrap
		justify-content space-around
	
	&__item
		font-family font_calibli
		font-size 22px
		line-height 1
		border-bottom 1px dotted #c0c0c0
		text-transform uppercase
		color #000
		transition color 0.25s ease
		
		&:hover
			text-decoration none
			color #c0c0c0

.b-special
	width 1227px
	margin 0 auto
	padding 70px 0
	
	@media (max-width: 1227px)
		width 100%
		padding-left  25px
		padding-right  25px
	
	&__title
		font-size 40px
		line-height 48px
		color #363738
		text-transform uppercase
		text-align center
		font-family font_regular
		
		&--blue
			color #02488d
			display block
	
	&__box
		color #1bae41
		font-size 24px
		font-weight lighter
		line-height 36px
		border 3px dotted #1bae41
		text-transform uppercase
		display inline-block
		padding 0 5px
		margin 40px 0
		
.b-form
	width 960px
	margin 0 auto
	
	&__text
		font-size 24px
		text-align center
		font-family font_calibli
		margin-bottom 30px

	&__fieldset
		display flex
		justify-content space-between
		
	&__group
		width 303px
		display flex
		flex-direction column
		align-items center
		
	&__data
		font-size 16px
		font-weight lighter
		line-height 17px
		margin-top 15px
		text-align center
		display flex
		font-family font_calibli
		

.b-button
	display inline-block
	outline 0
	border 0
	background #000
	color #fff
	font-family font_calibli
	
	&--callback
		background-color cl_gren
		box-shadow 0px 5px 5px 0px rgba(1, 1, 1, 0.75)
		padding 0
		font-size 22px
		text-transform uppercase
		padding 10px 60px
		transition background-color 0.25s ease
		
		&:hover
			text-decoration none
			background-color cl_l_gren
			color #fff
	&--send
		background-color cl_red
		box-shadow: 0px 5px 5px 0px rgba(1, 1, 1, 0.75)
		font-size 24px
		text-transform uppercase
		padding 6px 60px
		transition background-color 0.25s ease
		position relative
		
		&:hover
			text-decoration none
			background-color cl_l_red
			color #fff
		
		&:after
			content url('../images/button-arrow.png')
			position absolute
			top 6px
			right 30px


	
.b-input
	outline 0
	border 0
	
	&--text
		background-color rgb(244, 242, 242);
		box-shadow inset 0px 3px 7px 0px rgba(1, 1, 1, 0.75);
		width 100%
		height 40px
		line-height 1
		text-align center
		font-size 24px
		color #9b9b9b
		font-weight lighter
		font-family font_calibli
		margin-top 3px

		
/* Responsive: Portrait tablets and up */
@media screen and (min-width: 768px) {
	.container {
		max-width: 730px;
	}

	/* Remove the padding we set earlier */
	.header,
	.marketing,
	.footer {
		padding-left: 0;
		padding-right: 0;
	}

	/* Space out the masthead */
	.header {
		margin-bottom: 30px;
	}

	/* Remove the bottom border on the jumbotron for visual effect */
	.jumbotron {
		border-bottom: 0;
	}
}
