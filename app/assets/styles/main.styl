.browserupgrade {
	margin: 0.2em 0;
	background: #ccc;
	color: #000;
	padding: 0.2em 0;
}

body
	padding 0
	font-family font_regular

.b-page__line
	padding 0
	background #fff
	
	&--main
		background url(../images/main-bg.png) no-repeat top center
		
	&--green
		background cl_gren
	
	&--blue
		background cl_blue

.b-header
	width 1227px
	margin 0 auto
	padding-top 30px
	padding-bottom 45px
	display flex
	justify-content space-between
	align-items center
	
	@media (max-width: 1227px)
		width 100%
		padding-left  25px
		padding-right  25px
		flex-wrap wrap
		justify-content space-around

	&__phone
		font-size 36px
		font-family font_calibli

.b-menu
	display flex
	justify-content space-between
	width 1227px
	margin 0 auto
	padding-bottom 25px
	
	@media (max-width: 1227px)
		width 100%
		padding-left  25px
		padding-right  25px
		flex-wrap wrap
		justify-content space-around
	
	&__item
		font-family font_calibli
		font-size 22px
		line-height 1
		border-bottom 1px dotted #c0c0c0
		text-transform uppercase
		color #000
		transition color 0.25s ease
		
		&:hover
			text-decoration none
			color #c0c0c0

.b-main
	width 1227px
	margin 0 auto
	padding 70px 0 0
	
	@media (max-width: 1227px)
		width 100%
		padding-left  25px
		padding-right  25px
	
	&__title
		font-size 40px
		line-height 48px
		color #363738
		text-transform uppercase
		text-align center
		font-family font_regular
		
		&--blue
			color #02488d
			display block
	
	&__box
		color #1bae41
		font-size 24px
		font-weight lighter
		line-height 36px
		border 3px dotted #1bae41
		text-transform uppercase
		display inline-block
		padding 0 5px
		margin 40px 0
	
	&__form
		width 960px
		margin 0 auto

.b-why
	margin-top 65px
	
	&__title
		background cl_blue
		color #fff
		font-size 30px
		font-family font_calibli
		line-height 59px
		border-bottom 1px solid #fff
		display inline-block
		padding 0 20px
	
	&__content
		background cl_blue
		display flex
		color #fff
		padding 25px 0
	
	&__item
		flex 1
		text-align center
		display flex
		flex-direction column
		justify-content flex-end
	
	&__image
		flex: 1;
		display: flex;
		justify-content: center;
		align-items: center;
		
	&__text
		font-size 24px
		font-family font_calibli
		line-height 26px
		padding-top 25px

	&__footer
		background cl_blue
		color #fff
		display flex
		font-family 'Benguiat Rus', arial
		justify-content center
		align-items center
		padding-bottom 25px
	
	&__slogan
		padding-left 55px
		font-size 30px

.b-special
	width 1227px
	margin 0 auto
	padding 35px 0
	display flex
	
	&__content
		flex 1
		
	&__title
		font-size 48px
		color #fff
		font-family font_calibli
		text-transform uppercase
		
	&__form
		width 365px
		flex 0 0 365px
		background cl_blue
		color #fff
		padding 30px

.b-process
	width 1227px
	margin 0 auto
	padding 45px 0
	
	&__title
		font-size 36px
		color #000
		font-family font_regular
		text-align center
		text-transform uppercase
		font-weight 700
	
	&__step
		padding 50px 0

.b-step
	display flex
	
	
	&__day
		color cl_blue
		font-family font_calibli
		font-size 48px
		font-weight bold

		span
			font-size 24px
			font-weight normal
			

	&__item
		font-size 18px
		color #232323
		font-family font_calibli
		text-align center
		
		&--arrow
			flex 1
			display flex
			align-items center
			justify-content center
			
	&__text
		text-transform uppercase

.b-document
	
	&__title
		color cl_blue
		text-transform uppercase
		text-align center
		font-size 30px
		
	&__text
		color #232323
		text-transform uppercase
		text-align center
		font-size 18px
		line-height 24px
		padding 10px 0 40px
		
	&__list
		display flex
		justify-content center
		
	&__item
		text-align center
		display flex
		flex-direction column
		align-items center
		justify-content center
		width 500px
	
	&__icon
		flex 1
		display flex
		align-items center
		
	&__name
		font-family font_calibli
		font-size 18px
		text-align center
		padding-top 10px
		
		b
			display block

.b-sms
	width 1227px
	margin 0 auto
	padding 45px 0 28px
	
	&__title
		font-size 36px
		color #fff
		font-family font_regular
		text-transform uppercase
		text-align center
		line-height 50px
		display flex
		justify-content center
		
		img 
			margin-right 30px
			float left
			
	&__text
		padding 30px 85px
		font-size 24px
		color #fff
		font-weight lighter
		font-family font_calibli
		line-height 24px

.b-calc
	width 1027px
	margin 0 auto
	padding 45px 0 30px
	
	&__title
		font-size 36px
		color #000000
		font-family font_regular
		text-transform uppercase
		text-align center
		line-height 40px
		padding-bottom 15px

.b-about
	width 1070px
	margin 0 auto
	padding 45px 30px 30px
	
	&__title
		font-size 36px
		color #fff
		font-family font_regular
		text-transform uppercase
		text-align center
		line-height 40px
		padding-bottom 15px
		font-weight bold
		
	&__text
		color #fff
		font-family font_regular
		font-size 18px
		
	&__info
		background cl_blue
		color #fff
		display flex
		font-family 'Benguiat Rus', arial
		justify-content center
		align-items center
		padding 45px 0
	
	&__slogan
		padding-left 55px
		font-size 30px

.b-form
	display block
	
	&--blue
		flex 1
		
	&--inline
		width 960px
	
	&__title
		font-size 24px
		text-align center
		font-family font_calibli
		margin-bottom 30px
		
		&--white
			margin-bottom 20px
			line-height 1
			
			span
				display block
				text-transform uppercase
	&__step
		color cl_blue
		font-size 18px
		font-family font_calibli
		text-transform uppercase
		text-align center
		padding-bottom 15px
		padding-top 35px
		
		span
			color #000000

	&__fieldset
		display flex
		justify-content space-between
			
		&--colum
			flex-wrap wrap
			flex-direction column
			align-items center
		
		&--calc
			flex-wrap wrap
			align-items center
			justify-content flex-start
			margin 35px 0
		
	&__group
		display flex
		flex-direction column
		align-items center
		
		&--main
			width 303px
		
		&--calc
			width 195px
			margin-right 60px
			
		&--flex
			display flex
			flex-direction row
			justify-content center
	
	&__button
		margin-top 30px
	
	&__text
		margin-top 15px
		font-size 18px
		font-family font_calibli

	&__data
		font-size 16px
		font-weight lighter
		line-height 17px
		margin-top 15px
		text-align center
		display flex
		font-family font_calibli
		

.b-button
	display inline-block
	outline 0
	border 0
	background #000
	color #fff
	font-family font_calibli
	
	&--callback
		background-color cl_gren
		box-shadow 0px 5px 5px 0px rgba(1, 1, 1, 0.75)
		padding 0
		font-size 22px
		text-transform uppercase
		padding 10px 60px
		transition background-color 0.25s ease
		
		&:hover
			text-decoration none
			background-color cl_l_gren
			color #fff
	&--send
		background-color cl_red
		box-shadow: 0px 5px 5px 0px rgba(1, 1, 1, 0.75)
		font-size 24px
		text-transform uppercase
		padding 6px 60px
		transition background-color 0.25s ease
		position relative
		
		&:hover
			text-decoration none
			background-color cl_l_red
			color #fff
		
		&:after
			content url('../images/button-arrow.png')
			position absolute
			top 6px
			right 30px


	
.b-input
	outline 0
	border 0
	
	&--text
		background-color rgb(244, 242, 242);
		box-shadow inset 0px 3px 7px 0px rgba(1, 1, 1, 0.75);
		width 100%
		height 40px
		line-height 1
		text-align center
		font-size 24px
		color #9b9b9b
		font-weight lighter
		font-family font_calibli
		margin-top 3px
		
	&--white
		background #fff
		width 100%
		height 40px
		line-height 40px
		text-align center
		font-size 24px
		color #888888
		font-weight lighter
		font-family font_calibli
		margin-top 3px
		border 1px solid #000
		
	&--blue
		background cl_blue
		width 100%
		height 36px
		line-height 36px
		text-align center
		font-size 18px
		font-weight lighter
		font-family font_calibli
		color #fff
		
	&--green
		background cl_gren !important
		width 72px !important
		height 40px
		line-height 40px
		text-align center
		font-size 18px
		font-weight lighter
		font-family font_calibli
		color #fff
		margin-top 3px
		
	&--price
		width 320px

.b-label 
	font-family font_calibli
	font-size 18px
	text-align center

	&--select
		text-transform uppercase

.b-list
	list-style: none
	padding-left 50px
	margin 50px 0 0
	
	&__item
		padding-left 35px
		
		&--checked
			font-size 24px
			color #fff
			font-family font_calibli
			background url('../images/icon-check.png') no-repeat 0 50%
		

.jq-radio
	display inline-block
	vertical-align baseline
	border 1px solid #b9b9b9
	border-radius 50%
	padding 4px
	width 8px
	height 8px
	font-size 0
	background #fff
	
	&__div 
		display block
		border-radius 50%
		width 8px
		height 8px
		background #fff
	
	&.checked {border-color:#96004f;}
	&.checked .jq-radio__div {background:#96004f;}

.jq-selectbox 
	display block !important
	width 100%
	
	&__select
		border inherit
		padding 0 45px 0 7px
		height inherit
		font normal 18px/34px font_calibli
		color #fff
		background inherit
		cursor pointer
	
	&__trigger 
		float right
		width 34px
		height 100%
		background url("../images/icon-select.png") no-repeat 50% 50%
		position absolute
		top 0
		right 0
	
	&__dropdown
		border 1px solid cl_blue
		padding 1px 1px 0
		background #fff
		left 0
		right 0
		color #000
		
		li 
			margin 0 0 1px
			padding 0 6px 0
			cursor pointer
			
			&.sel, &.selected 
				color #fff
				background cl_blue
		ul
			margin 0
			padding 0
	.error
		.jq-selectbox__select 
			border-color #f00 !important

/* Responsive: Portrait tablets and up */
@media screen and (min-width: 768px) {
	.container {
		max-width: 730px;
	}

	/* Remove the padding we set earlier */
	.header,
	.marketing,
	.footer {
		padding-left: 0;
		padding-right: 0;
	}

	/* Space out the masthead */
	.header {
		margin-bottom: 30px;
	}

	/* Remove the bottom border on the jumbotron for visual effect */
	.jumbotron {
		border-bottom: 0;
	}
}
